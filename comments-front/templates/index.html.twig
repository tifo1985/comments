{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-12 mb-4">
            <h1>Articles</h1>
        </div>
        {% for article in articleViewModel.getArticles %}
            <div class="col-6 mb-4">
                <div class="card">
                    <div class="card-header">{{ article.title }}</div>
                    <img class="card-img-top" src="{{ article.image }}" alt="{{ article.title }}">
                    <div class="card-header">Commentaires</div>
                    {{ render(controller(
                        'App\\UserInterface\\Controller\\CommentController',
                        { 'articleId': article.uuid, 'maxResult': 3 }
                    )) }}
                    <div class="card-body d-flex justify-content-between flex-column">
                        <a href="{{ path('article_details', {articleId: article.uuid}) }}">Lire la suite</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}