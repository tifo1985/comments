{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-12 mb-4">
            <h1>Article</h1>
        </div>
            <div class="col-12 mb-6">
                <div class="card">
                    <div class="card-header">{{ articleViewModel.article.title }}</div>
                    <img class="card-img-top" src="{{ articleViewModel.article.image }}" alt="{{ articleViewModel.article.title }}" />
                    <div class="card-body">
                        {{ articleViewModel.article.text }}
                    </div>
                    <div class="card-header">Commentaires</div>
                    {{ render(controller(
                        'App\\UserInterface\\Controller\\CommentController',
                        { 'articleId': articleViewModel.article.uuid}
                    )) }}
                </div>
            </div>
    </div>
{% endblock %}