<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="App\Authentication\Domain\Entity\Author" table="user" repository-class="App\Authentication\Infrastructure\Repository\AuthorRepository">
        <id name="id" type="string" column="id" length="100" />
        <field name="name" column="name" />
        <field name="email" column="email" />
        <field name="avatar" column="avatar" />
    </entity>

</doctrine-mapping>